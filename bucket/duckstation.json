    "hash": "1a7cc0bf4d85e0de13fd29dd6e5adab7736c949cb1cf2a95bdcc63cd7c49901e",
    "pre_install": [
        "$settings = \"$dir\\settings.ini\"",
        "$portable = \"$dir\\portable.txt\"",
        "if (-not (Test-Path \"$settings\")) {",
        "  New-Item $settings | Out-Null",
        "  Write-Output \"Creating settings.ini...\"",
        "}",
        "if (-not (Test-Path \"$portable\")) {",
        "  New-Item $portable | Out-Null",
        "  Write-Output \"Creating portable.txt...\"",
        "}"
    ],
    "bin": [
        ["duckstation-nogui-x64-ReleaseLTCG.exe", "duckstation-nogui.exe"],
        ["duckstation-qt-x64-ReleaseLTCG.exe", "duckstation-qt.exe"]
    ],
    "shortcuts": [
        [
            "duckstation-qt-x64-ReleaseLTCG.exe",
            "Playstation"
        ]
    ],
    "persist": [
        "portable.txt",
        "bios",
        "cache",
        "cheats",
        "covers",
        "dump",
        "game-settings",
        "inputprofiles",
        "memcards",
        "savestates",
        "screenshots",
        "shaders",
        "textures",
        "settings.ini"
    ]
}
