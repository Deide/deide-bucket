{
    "homepage": "http://aimp.ru",
    "version": "4.60.2156",
    "description": "AIMP is a music player and library manager",
    "url": "http://aimp.su/storage/c469ab9a1c3ff87029ddff91cca68327/aimp_4.60.2156.exe",
    "hash": "4A2EB5CD18774A2BD3EFFF6209FFC51C82997BB52FCDECC5D5F63114A643A265",
    "pre_install": [
        "if (-not (Test-Dir \"$dir/Persist\")) { New-Item Persist -Type Directory }"
    ],
    "extract_dir": "AIMP",
    "persist": "Profile",
    "bin": "aimp.exe",
    "shortcuts": [["aimp.exe", "AIMP"]],
    "checkver": {
        "url": "http://www.aimp.ru/?do=download&os=windows",
        "regex": "\\<h1\\>AIMP v([\\d.]+), build ([\\d.]+) \\(No Installer\\)\\<\\/h1\\>",
        "replace": "${1}.${2}"
    },
    "autoupdate": {
        "url": "https://www.aimp.ru/?do=download.file&id=8#/aimp_$version_no-installer.zip",
        "hash": {
            "regex": "SHA256: $sha256"
        }
    }
}
