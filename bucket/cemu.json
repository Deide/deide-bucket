{
    "homepage": "https://cemu.info",
    "version": "1.25.4",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.25.4.zip",
    "hash": "4b22cef967e04449ac46e047828f9b07b056881a96815bd1c1e5e0a15c7bac5f",
    "extract_dir": "cemu_1.25.4",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
