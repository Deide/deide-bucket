{
    "homepage": "https://cemu.info",
    "version": "1.26.1",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.26.1.zip",
    "hash": "990a5b9746c9a8453b58bd2cda509c3b122a36a9552e6c0a57d597d68efe9197",
    "extract_dir": "cemu_1.26.1",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
