{
    "homepage": "https://cemu.info",
    "version": "1.22.2",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.22.2.zip",
    "hash": "5d7deb51cdee202f7aa519694e6df499f4d9d672db1ad962f0d2dbba6cb339af",
    "extract_dir": "cemu_1.22.2",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
