{
    "homepage": "https://cemu.info",
    "version": "1.20.0",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.20.0.zip",
    "hash": "4693549CCA3846C4D8504608FB615337F5C45BF91F10B5617349897E8CB3E739",
    "extract_dir": "cemu_1.20.0",
    "bin": ["Cemu.exe"],
    "shortcuts": [["Cemu.exe", "Wii U"]],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu"
        ]
    },
    "checkver": {
        "url": "https://github.com/citra-emu/citra-nightly/releases/latest",
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
