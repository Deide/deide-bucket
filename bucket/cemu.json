{
    "homepage": "https://cemu.info",
    "version": "1.22.4",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.22.4.zip",
    "hash": "53619a10ba8bf3d97d3ff20003878c1ce025523f981d416101e7091a2fc9b2c4",
    "extract_dir": "cemu_1.22.4",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
