{
    "homepage": "https://cemu.info",
    "version": "1.26.2",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.26.2.zip",
    "hash": "b0e3abf5048f78e352b42c3e1660a2c6e85d6905cd9f60d06ca2f2318fa3152c",
    "extract_dir": "cemu_1.26.2",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
