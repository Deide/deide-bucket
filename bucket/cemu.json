{
    "homepage": "https://cemu.info",
    "version": "1.22.8",
    "description": "Wii U emulator",
    "url": "http://cemu.info/releases/cemu_1.22.8.zip",
    "hash": "76e6dc927ac4b94c54dcc5231a2f2f9f0fa356e5a804ac069715a15439e05c55",
    "extract_dir": "cemu_1.22.8",
    "bin": "Cemu.exe",
    "shortcuts": [
        [
            "Cemu.exe",
            "Wii U"
        ]
    ],
    "persist": [
        "gameProfiles",
        "controllerProfiles",
        "graphicPacks",
        "shaderCache/transferable",
        "mlc01",
        "settings.xml"
    ],
    "installer": {
        "script": [
            "if (-not (Test-Path $dir\\settings.xml)) {",
            "  Start-Process $dir\\Cemu.exe; Start-Sleep -Seconds 1; Stop-Process -Name Cemu",
            "}"
        ]
    },
    "checkver": {
        "regex": "Cemu ([\\d.]+)"
    },
    "autoupdate": {
        "url": "http://cemu.info/releases/cemu_$version.zip",
        "extract_dir": "cemu_$version"
    }
}
